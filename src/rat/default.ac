theorem times_three(x: ℚ) {
    3 ⋅ x = x + x + x
} by {
    ℤ.3 = ℤ.2 + ℤ.1
    3 = 2 + 1
    3 ⋅ x = (2 + 1) ⋅ x
    3 ⋅ x = 2 ⋅ x + 1 ⋅ x
}

theorem three_thirds(x: ℚ) {
    (x / 3) + (x / 3) + (x / 3) = x
} by {
    (x / 3) + (x / 3) + (x / 3) = (x + x + x) / 3
    (x / 3) + (x / 3) + (x / 3) = (3 ⋅ x) / 3
    (x ⋅ 3) / 3 = x
}

theorem some_mul_lt(a: ℚ, b: ℚ) {
    0 <= a and b > 0 implies
    exists(ε: ℚ) {
        ε > 0 and a ⋅ ε < b
    }
} by {
    if a = 0 {
        let ε = 1
        ε > 0
        a ⋅ ε = 0
        a ⋅ ε < b
        ε > 0 and a ⋅ ε < b
    } else {
        a > 0
        let c: ℚ satisfy {
            c > 0 and c < b
        }
        let ε = c / a
        ε > 0
        a ⋅ ε = c
        a ⋅ ε < b
        ε > 0 and a ⋅ ε < b
    }
}

