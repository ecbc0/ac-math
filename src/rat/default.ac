theorem reduce_nonneg(a: ℤ, b: ℤ) {
    a >= ℤ.0 and b >= ℤ.0
    implies
    reduce(a, b) >= 0
} by {
    if a = ℤ.0 {
        reduce(a, b) >= 0
    } else {
        if b = ℤ.0 {
            reduce(a, b) >= 0
        } else {
            a > ℤ.0
            b > ℤ.0
            reduce(a, b) > 0
            reduce(a, b) >= 0
        }
    }
}

