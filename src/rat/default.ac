/// inverse of positive
define iop(n: ℕ) -> ℚ {
    1 / ℚ.from_nat(n + ℕ.1)
}

theorem iop_pos(n: ℕ) {
    iop(n) > 0
} by {
    ℕ.1 <= n + ℕ.1
    ℤ.1 <= ℤ.from_nat(n + ℕ.1)
    1 <= ℚ.from_nat(n + ℕ.1)
    0 < ℚ.from_nat(n + ℕ.1)
}

