attributes ℝ {
    /// True if this real number is an upper bound for the set s.
    define is_set_upper_bound(self, s: Set[ℝ]) -> Bool {
        forall(y: ℝ) {
            y ∈ s implies y <= self
        }
    }

    /// True if this real number is a lower bound for the set s.
    define is_set_lower_bound(self, s: Set[ℝ]) -> Bool {
        forall(y: ℝ) {
            y ∈ s implies self <= y
        }
    }

    /// True if this real number is the least upper bound (supremum) for the set s.
    define is_set_least_upper_bound(self, s: Set[ℝ]) -> Bool {
        self.is_set_upper_bound(s) and
        forall(y: ℝ) {
            y.is_set_upper_bound(s) implies self <= y
        }
    }

    /// True if this real number is the greatest lower bound (infimum) for the set s.
    define is_set_greatest_lower_bound(self, s: Set[ℝ]) -> Bool {
        self.is_set_lower_bound(s) and
        forall(y: ℝ) {
            y.is_set_lower_bound(s) implies y <= self
        }
    }
}

/// The least upper bound of a set is unique.
theorem uniqueness_of_least_upper_bound(u1: ℝ, u2: ℝ, s: Set[ℝ]) {
    u1.is_set_least_upper_bound(s) and u2.is_set_least_upper_bound(s) implies u1 = u2
}

/// The greatest lower bound of a set is unique.
theorem uniqueness_of_greatest_lower_bound(u1: ℝ, u2: ℝ, s: Set[ℝ]) {
    u1.is_set_greatest_lower_bound(s) and u2.is_set_greatest_lower_bound(s) implies u1 = u2
}

/// True if s1 and s2 have the same set of upper bounds.
define same_upper_bound(s1: Set[ℝ], s2: Set[ℝ]) -> Bool {
    forall(r: ℝ) {
        r.is_set_upper_bound(s1) iff r.is_set_upper_bound(s2)
    }
}

/// True if s1 and s2 have the same least upper bounds (suprema).
define same_least_upper_bound(s1: Set[ℝ], s2: Set[ℝ]) -> Bool {
    forall(r: ℝ) {
        r.is_set_least_upper_bound(s1) iff r.is_set_least_upper_bound(s2)
    }
}

/// If two sets have the same upper bounds, then a least upper bound for one set
/// is also a least upper bound for the other set.
theorem same_upper_bound_imp_same_least_upper_bound_lemma(s1: Set[ℝ], s2: Set[ℝ], r: ℝ) {
    same_upper_bound(s1, s2) and r.is_set_least_upper_bound(s1) implies r.is_set_least_upper_bound(s2)
} by {
    forall(x: ℝ) {
        if x.is_set_upper_bound(s2) {
            x.is_set_upper_bound(s1)
            r <= x
        }
    }
    r.is_set_least_upper_bound(s2)
}

/// If two sets have the same upper bounds, then they have the same least upper bounds.
theorem same_upper_bound_imp_same_least_upper_bound(s1: Set[ℝ], s2: Set[ℝ]) {
    same_upper_bound(s1, s2) implies same_least_upper_bound(s1, s2)
} by {
    forall(r: ℝ) {
        r.is_set_least_upper_bound(s1) implies r.is_set_least_upper_bound(s2)
        r.is_set_least_upper_bound(s2) implies r.is_set_least_upper_bound(s1)
        r.is_set_least_upper_bound(s1) iff r.is_set_least_upper_bound(s2)
    }
}

/// True if s1 and s2 have the same set of lower bounds.
define same_lower_bound(s1: Set[ℝ], s2: Set[ℝ]) -> Bool {
    forall(r: ℝ) {
        r.is_set_lower_bound(s1) iff r.is_set_lower_bound(s2)
    }
}

/// True if s1 and s2 have the same greatest lower bounds (infima).
define same_greatest_lower_bound(s1: Set[ℝ], s2: Set[ℝ]) -> Bool {
    forall(r: ℝ) {
        r.is_set_greatest_lower_bound(s1) iff r.is_set_greatest_lower_bound(s2)
    }
}

/// If two sets have the same lower bounds, then a greatest lower bound for one set
/// is also a greatest lower bound for the other set.
theorem same_lower_bound_imp_same_greatest_lower_bound_lemma(s1: Set[ℝ], s2: Set[ℝ], r: ℝ) {
    same_lower_bound(s1, s2) and r.is_set_greatest_lower_bound(s1) implies r.is_set_greatest_lower_bound(s2)
} by {
    forall(x: ℝ) {
        if x.is_set_lower_bound(s2) {
            x.is_set_lower_bound(s1)
            r >= x
        }
    }
    r.is_set_greatest_lower_bound(s2)
}

/// If two sets have the same lower bounds, then they have the same greatest lower bounds.
theorem same_lower_bound_imp_same_least_lower_bound(s1: Set[ℝ], s2: Set[ℝ]) {
    same_lower_bound(s1, s2) implies same_greatest_lower_bound(s1, s2)
} by {
    forall(r: ℝ) {
        r.is_set_greatest_lower_bound(s1) implies r.is_set_greatest_lower_bound(s2)
        r.is_set_greatest_lower_bound(s2) implies r.is_set_greatest_lower_bound(s1)
        r.is_set_greatest_lower_bound(s1) iff r.is_set_greatest_lower_bound(s2)
    }
}

/// Any lower bound of a nonempty set is less than or equal to any upper bound of the set.
theorem lower_lte_upper_bound(s: Set[ℝ], l: ℝ, u: ℝ) {
    (s).is_nonempty and l.is_set_lower_bound(s) and u.is_set_upper_bound(s) implies l <= u
} by {
    let x: ℝ satisfy { x ∈ s }
    l <= x
    x <= u
    l <= u
}

/// The greatest lower bound of a nonempty set is less than or equal to its least upper bound.
theorem greatest_lower_lte_least_upper_bound(s: Set[ℝ], l: ℝ, u: ℝ) {
    (s).is_nonempty and l.is_set_greatest_lower_bound(s) and u.is_set_least_upper_bound(s) implies l <= u
}

// The supremum condition on s is that it's nonempty, and has
// an upper bound.
// sup_cut is the Dedekind cut that will be the supremum of s.
// First we define it, then we prove that it is a Dedekind cut.
/// All r ∈ ℚ that r < sup(s)  
/// Or written as ∪(a ∈ s, ℚ_(< a)) = ℚ_(< sup(s))
define sup_cut(s: Set[ℝ], r: ℚ) -> Bool {
    not ℝ.from_rat(r).is_set_upper_bound(s)
}

/// If s is nonempty and has an upper bound, then sup_cut(s) is a cut (nonempty and has a complement).
theorem sup_cut_is_cut(s: Set[ℝ], ub: ℝ) {
    (s).is_nonempty and ub.is_set_upper_bound(s)
    implies
    is_cut(sup_cut(s))
} by {
    let x: ℝ satisfy {
        x ∈ s
    }

    let r1: ℚ satisfy {
        ℝ.from_rat(r1) < x
    }

    not ℝ.from_rat(r1).is_set_upper_bound(s)
    sup_cut(s, r1)

    let r2: ℚ satisfy {
        ℝ.from_rat(r2) > ub
    }

    // Show that r2 is an upper bound of s
    forall(y: ℝ) {
        if y ∈ s {
            y <= ub
            ub < ℝ.from_rat(r2)
            y < ℝ.from_rat(r2)
            y <= ℝ.from_rat(r2)
        }
    }
    ℝ.from_rat(r2).is_set_upper_bound(s)
    not sup_cut(s, r2)
}

/// If s is nonempty and has an upper bound, then sup_cut(s) is a lower interval
/// (downward closed: if q is in the cut and p < q, then p is in the cut).
theorem sup_cut_is_lower_interval(s: Set[ℝ], ub: ℝ) {
    (s).is_nonempty and ub.is_set_upper_bound(s)
    implies
    is_lower_interval(sup_cut(s))
} by {
    forall(x: ℚ, y: ℚ) {
        if sup_cut(s, y) and x < y {
            not ℝ.from_rat(y).is_set_upper_bound(s)
            let z: ℝ satisfy {
                z ∈ s and z > ℝ.from_rat(y)
            }
            z > ℝ.from_rat(x)
            not ℝ.from_rat(x).is_set_upper_bound(s)
            sup_cut(s, x)
        }
    }
}

// r ∈ ℚ, r < sup(s) have no greatest
theorem sup_cut_not_has_greatest(s: Set[ℝ], ub: ℝ) {
    (s).is_nonempty and ub.is_set_upper_bound(s)
    implies
    not has_greatest(sup_cut(s))
} by {
    if has_greatest(sup_cut(s)) {
        let q: ℚ satisfy {
            is_greatest(sup_cut(s), q)
        }

        sup_cut(s, q)
        not ℝ.from_rat(q).is_set_upper_bound(s)
        let z: ℝ satisfy {
            z ∈ s and z > ℝ.from_rat(q)
        }

        ℝ.from_rat(q) < z
        let q_prime: ℚ satisfy {
            q < q_prime and ℝ.from_rat(q_prime) < z
        }

        // Since ℝ.from_rat(q_prime) < z and z is in s,
        // ℝ.from_rat(q_prime) is not an upper bound for s
        not ℝ.from_rat(q_prime).is_set_upper_bound(s)

        // Therefore q_prime is in the cut
        sup_cut(s, q_prime)

        // But q < q_prime, contradicting our assumption
        not q_prime <= q
        not is_greatest(sup_cut(s), q)
        false
    }
}

define have_upper_bound(s: Set[ℝ]) -> Bool {
    exists(ub: ℝ) {
        ub.is_set_upper_bound(s)
    }
}

/// If s is nonempty and has an upper bound, then sup_cut(s) is a Dedekind cut.
theorem sup_cut_is_dedekind_cut(s: Set[ℝ], ub: ℝ) {
    (s).is_nonempty and have_upper_bound(s)
    implies
    is_dedekind_cut(sup_cut(s))
}

/// If sup_cut(s) is a Dedekind cut, then s is nonempty and has an upper bound.
theorem sup_dedekind_cut_imp_no_empty_and_have_upper_bound(s: Set[ℝ]) {
    is_dedekind_cut(sup_cut(s)) implies (s).is_nonempty and have_upper_bound(s)
} by {
    is_cut(sup_cut(s))
}

/// The supremum (least upper bound) of s, if it exists.
/// Returns 0 if s is empty or has no upper bound.
let sup = function(s: Set[ℝ]) {
    if (s).is_nonempty and have_upper_bound(s) {
        ℝ.new(sup_cut(s))
    } else {
        0
    }
}

/// True if s is nonempty and has an upper bound (so sup(s) exists).
define have_sup(s: Set[ℝ]) -> Bool {
    (s).is_nonempty and have_upper_bound(s)
}

/// If s is nonempty and has an upper bound, then sup(s) is its least upper bound.
/// This proves the existence of the supremum for bounded nonempty sets.
theorem ub_imp_lub(s: Set[ℝ], x: ℝ) {
    have_sup(s)
    implies sup(s).is_set_least_upper_bound(s)
} by {
    (s).is_nonempty
    have_upper_bound(s)
    is_dedekind_cut(sup_cut(s))
    let y = sup(s)
    y = ℝ.new(sup_cut(s))

    // Part 1: Show y is an upper bound of s
    forall(z: ℝ) {
        if z ∈ s {
            if z > y {
                let q: ℚ satisfy {
                    z > ℝ.from_rat(q) and ℝ.from_rat(q) > y
                }
                not y.gt_rat(q)
                not sup_cut(s, q)
                ℝ.from_rat(q).is_set_upper_bound(s)
                z <= ℝ.from_rat(q)
                false
            }
        }
    }
    y.is_set_upper_bound(s)

    // Part 2: Show y is the least upper bound
    forall(w: ℝ) {
        if w.is_set_upper_bound(s) {
            // We'll prove y <= w by contradiction
            if y > w {
                let q: ℚ satisfy {
                    y > ℝ.from_rat(q) and ℝ.from_rat(q) > w
                }
                not y <= ℝ.from_rat(q)
                sup_cut(s, q)
                not ℝ.from_rat(q).is_set_upper_bound(s)
                let z: ℝ satisfy {
                    z ∈ s and z > ℝ.from_rat(q)
                }
                z <= w
                ℝ.from_rat(q) > w
                z > ℝ.from_rat(q)
                z > w
                false
            }
        }
    }
}

/// Any upper bound of a nonempty bounded set is greater than or equal to its supremum.
theorem upper_bound_lte_sup(s: Set[ℝ], u: ℝ) {
    (s).is_nonempty and u.is_set_upper_bound(s) implies sup(s) <= u
}

/// Any element of s is less than or equal to its least upper bound.
theorem lte_sup(s: Set[ℝ], y: ℝ, a: ℝ) {
    y.is_set_least_upper_bound(s) and a ∈ s implies a <= y
}

/// For any ε > 0, there exists an element of s within ε of the least upper bound y,
/// and this element is greater than y - ε.
theorem closely_lt_sup(s: Set[ℝ], y: ℝ, ε: ℝ) {
    y.is_set_least_upper_bound(s) and ε > 0 implies exists(a: ℝ) {
        a ∈ s and y - ε < a and a <= y
    } 
} by {
    y - ε < y

    not (y - ε).is_set_upper_bound(s)

    let a: ℝ satisfy {
        a ∈ s and not a <= y - ε
    }

    a > y - ε

    a <= y

    a ∈ s and y - ε < a and a <= y
}

/// For any ε > 0, there exists an element of s within ε of sup(s),
/// and this element is greater than sup(s) - ε.
theorem closely_lt_sup_directly(s: Set[ℝ], ε: ℝ) {
    have_sup(s) and ε > 0 implies exists(a: ℝ) {
        a ∈ s and sup(s) - ε < a and a <= sup(s)
    } 
} by {
    sup(s).is_set_least_upper_bound(s)
}

/// If l is less than the least upper bound y of s, then there exists an element of s
/// between l and y.
theorem directly_closely_lt_sup(s: Set[ℝ], y: ℝ, l: ℝ) {
    y.is_set_least_upper_bound(s) and l < y implies exists(a: ℝ) {
        a ∈ s and l < a and a <= y
    }
} by {
    let ε = y - l
    ε > 0
    y - ε = y + -(y - l)
    y - ε = l
}

/// If l is less than sup(s), then there exists an element of s between l and sup(s).
theorem directly_closely_lt_sup_directly(s: Set[ℝ], l: ℝ) {
    have_sup(s) and l < sup(s) implies exists(a: ℝ) {
        a ∈ s and l < a and a <= sup(s)
    }
} 

/// Transform a predicate f to its negated form.
define flip_fn(f: ℝ -> Bool, x: ℝ) -> Bool {
    f(-x)
}

/// Flipping a predicate twice returns the original predicate.
theorem flip_flip_fn(f: ℝ -> Bool) {
    flip_fn(flip_fn(f)) = f
} by {
    forall(x: ℝ) {
        flip_fn(flip_fn(f), x) = flip_fn(f)(-x)
        flip_fn(flip_fn(f), x) = f(x)
    }
}

/// The set obtained by negating all elements of s.
define flip(s: Set[ℝ]) -> Set[ℝ] {
    Set[ℝ].new(flip_fn(s.contains))
}

/// Negating all elements twice returns the original set.
theorem flip_flip(s: Set[ℝ]) {
    flip(flip(s)) = s
} by {
    flip(s).contains = flip_fn(s.contains)
    flip(flip(s)).contains = flip_fn(flip_fn(s.contains))
    flip(flip(s)).contains = s.contains
}

/// If x is a lower bound of s, then -x is an upper bound of flip(s).
theorem lb_imp_flip_ub(s: Set[ℝ], x: ℝ) {
    x.is_set_lower_bound(s) implies (-x).is_set_upper_bound(flip(s))
} by {
    forall(y: ℝ) {
        if y ∈ flip(s) {
            -y ∈ s
            x <= -y
            -x >= y
        }
    }
}

/// If -a ≤ b, then -b ≤ a.
theorem neg_lte(a: ℝ, b: ℝ) {
    -a <= b implies -b <= a
} 

/// If x is an upper bound of s, then -x is a lower bound of flip(s).
theorem ub_imp_flip_lb(s: Set[ℝ], x: ℝ) {
    x.is_set_upper_bound(s) implies (-x).is_set_lower_bound(flip(s))
} by {
    forall(y: ℝ) {
        if y ∈ flip(s) {
            -y ∈ s
            -y <= x
            -x <= y
        }
    }
}

/// If x is the greatest lower bound of s, then -x is the least upper bound of flip(s).
theorem glb_imp_flip_lub(s: Set[ℝ], x: ℝ) {
    x.is_set_greatest_lower_bound(s)
    implies (-x).is_set_least_upper_bound(flip(s))
} by {
    x.is_set_lower_bound(s)
    (-x).is_set_upper_bound(flip(s))

    forall(y: ℝ) {
        if y.is_set_upper_bound(flip(s)) {
            (-y).is_set_lower_bound(flip(flip(s)))
            (-y).is_set_lower_bound(s)
            -y <= x
            -x <= y
        }
    }
    (-x).is_set_least_upper_bound(flip(s))
}

/// If x is the least upper bound of s, then -x is the greatest lower bound of flip(s).
theorem lub_imp_flip_glb(s: Set[ℝ], x: ℝ) {
    x.is_set_least_upper_bound(s)
    implies (-x).is_set_greatest_lower_bound(flip(s))
} by {
    x.is_set_upper_bound(s)
    (-x).is_set_lower_bound(flip(s))

    forall(y: ℝ) {
        if y.is_set_lower_bound(flip(s)) {
            (-y).is_set_upper_bound(flip(flip(s)))
            (-y).is_set_upper_bound(s)
            x <= -y
            y <= -x
        }
    }
}

/// Negating a nonempty set yields another nonempty set.
theorem flip_preserve_nonempty(s: Set[ℝ]) {
    (s).is_nonempty implies (flip(s)).is_nonempty
} by {
    let x: ℝ satisfy { x ∈ s }
    -x ∈ flip(s)
}

