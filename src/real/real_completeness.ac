theorem sup_dedekind_cut_imp_no_empty_and_have_upper_bound(s: Set[ℝ]) {
    is_dedekind_cut(sup_cut(s)) implies (s).is_nonempty and have_upper_bound(s)
} by {
    is_cut(sup_cut(s))
}

let sup = function(s: Set[ℝ]) {
