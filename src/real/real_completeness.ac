/// The infimum (greatest lower bound) of s, if it exists.
/// Returns 0 if s is empty or has no lower bound.
let inf = function(s: Set[ℝ]) {
    if (s).is_nonempty and have_lower_bound(s) {
        -ℝ.new(sup_cut(flip(s)))
    } else {
        0
    }
}

/// True if s is nonempty and has a lower bound (so inf(s) exists).
define have_inf(s: Set[ℝ]) -> Bool {
    (s).is_nonempty and have_lower_bound(s)
}

/// If s is nonempty and has a lower bound, then inf(s) is its greatest lower bound.
/// This proves the existence of the infimum for bounded nonempty sets.
theorem lb_imp_glb(s: Set[ℝ]) {
    have_inf(s)
    implies inf(s).is_set_greatest_lower_bound(s)
} by {
    (s).is_nonempty
    have_lower_bound(s)
    let x: ℝ satisfy { x.is_set_lower_bound(s) }
    (flip(s)).is_nonempty
    (-x).is_set_upper_bound(flip(s))
    let y: ℝ satisfy {
        y.is_set_least_upper_bound(flip(s))
    }
    (flip(s)).is_nonempty
    have_upper_bound(flip(s))
    y = sup(flip(s))
    y = ℝ.new(sup_cut(flip(s)))
    -y = inf(s)
    (-y).is_set_greatest_lower_bound(flip(flip(s)))
    flip(flip(s)) = s
    (-y).is_set_greatest_lower_bound(s)
}

/// Any lower bound of a nonempty bounded set is less than or equal to its infimum.
theorem low_bound_gte_inf(s: Set[ℝ], u: ℝ) {
    (s).is_nonempty and u.is_set_lower_bound(s) implies inf(s) >= u
}

/// Any element of s is greater than or equal to its greatest lower bound.
theorem gte_inf(s: Set[ℝ], y: ℝ, a: ℝ) {
    y.is_set_greatest_lower_bound(s) and a ∈ s implies a >= y
}

/// The infimum of a set is less than or equal to its supremum.
theorem inf_lte_sup(s: Set[ℝ]) {
    have_inf(s) and have_sup(s) implies inf(s) <= sup(s)
} by {
    let x: ℝ satisfy {
        x ∈ s
    }
    inf(s) <= x
    x <= sup(s)
}

/// For any ε > 0, there exists an element of s within ε of the greatest lower bound y,
/// and this element is less than y + ε.
theorem closely_gt_inf(s: Set[ℝ], y: ℝ, ε: ℝ) {
    y.is_set_greatest_lower_bound(s) and ε > 0 implies exists(a: ℝ) {
        a ∈ s and y <= a and a < y + ε 
    }
} by {
    (-y).is_set_least_upper_bound(flip(s))
    let b: ℝ satisfy {
        b ∈ flip(s) and -y - ε < b and b <= -y
    }
    -b ∈ s
    y <= -b
    -b < y + ε
    let a = -b
    a ∈ s and y <= a and a < y + ε 
}

/// For any ε > 0, there exists an element of s within ε of inf(s),
/// and this element is less than inf(s) + ε.
theorem closely_gt_inf_directly(s: Set[ℝ], ε: ℝ) {
    have_inf(s) and ε > 0 implies exists(a: ℝ) {
        a ∈ s and inf(s) <= a and a < inf(s) + ε 
    }
} by {
    inf(s).is_set_greatest_lower_bound(s)
}

/// If u is greater than the greatest lower bound y of s, then there exists an element of s
/// between y and u.
theorem directly_closely_gt_inf(s: Set[ℝ], y: ℝ, u: ℝ) {
    y.is_set_greatest_lower_bound(s) and u > y implies exists(a: ℝ) {
        a ∈ s and y <= a and a < u 
    }
} by {
    let ε = u - y
    ε > 0
    let (a: ℝ) satisfy {
        a ∈ s and y <= a and a < y + ε 
    }
    y + ε = u
    a < u
}

/// If u is greater than inf(s), then there exists an element of s between inf(s) and u.
theorem directly_closely_gt_inf_directly(s: Set[ℝ], u: ℝ) {
    have_inf(s) and u > inf(s) implies exists(a: ℝ) {
        a ∈ s and inf(s) <= a and a < u 
    }
}

/// The sequence f is within ε of a for all indices beyond n (tail bound).
define tail_bound(f: ℕ -> ℝ, a: ℝ, n: ℕ, ε: ℝ) -> Bool {
    forall(m: ℕ) {
        m > n implies (f(m) - a).abs < ε
    }
}

/// The sequence f converges to a if for every ε > 0, f is eventually within ε of a.
define converge_to(f: ℕ -> ℝ, a: ℝ) -> Bool {
    forall(ε: ℝ) {
        ε > 0 implies exists(n: ℕ) {
            tail_bound(f, a, n, ε)
        }
    }
}

/// The sequence f converges if there exists some limit a.
define converge(f: ℕ -> ℝ) -> Bool {
    exists(a: ℝ) {
        converge_to(f, a)
    }
}

/// Returns the limit of f if it converges, otherwise returns 0.
let limit(f: ℕ -> ℝ) -> a: ℝ satisfy {
    if converge(f) {
        converge_to(f, a)
    } else {
        a = 0
    }
}

