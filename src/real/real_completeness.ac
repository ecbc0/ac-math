define converge_to(f: ℕ -> ℝ, a: ℝ) -> Bool {
    forall(ε: ℝ) {
        ε > 0 implies exists(n: ℕ) {
            forall(m: ℕ) {
                m > n implies (f(m) - a).abs < ε
            }
        }
    }
}

define converge(f: ℕ -> ℝ) -> Bool {
    exists(a: ℝ) {
        converge_to(f, a)
    }
}

define is_increase(f: ℕ -> ℝ) -> Bool {
    forall(n: ℕ, m: ℕ) {
        n < m implies f(n) <= f(m)
    }
}

define is_decrease(f: ℕ -> ℝ) -> Bool {
    forall(n: ℕ, m: ℕ) {
        n < m implies f(m) <= f(n)
    }
}

attributes ℝ {
    define is_seq_upper_bound(self, f: ℕ -> ℝ) -> Bool {
        forall(n: ℕ) {
            f(n) <= self
        }
    }

    define is_seq_lower_bound(self, f: ℕ -> ℝ) -> Bool {
        forall(n: ℕ) {
            self <= f(n)
        }
    }
}

define have_seq_upper_bound(f: ℕ -> ℝ) -> Bool {
    exists(a: ℝ) {
