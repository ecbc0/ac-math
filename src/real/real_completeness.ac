/// Monotone convergence theorem: a bounded increasing sequence converges to its supremum.
theorem bounded_increase_convergence_to(f: ℕ -> ℝ) {
    is_increase(f) and have_seq_upper_bound(f) implies converge_to(f, sup(fn_image(f)))
} by {
    (fn_image(f)).is_nonempty
    have_upper_bound(fn_image(f))
    let a = sup(fn_image(f))
    a.is_set_least_upper_bound(fn_image(f))
    forall(ε: ℝ) {
        if ε > 0 {
            let x: ℝ satisfy {
                x ∈ fn_image(f) and a - ε < x and x <= a
            }
            let n: ℕ satisfy { x = f(n) }
            forall(m: ℕ) {
                if m > n {
                    f(m) >= f(n)
                    a - ε < f(m)
                    a.is_set_upper_bound(fn_image(f))
                    f(m) ∈ fn_image(f)
                    f(m) <= a 
                    - ε < f(m) - a
                    f(m) - a <= 0
                    f(m) - a < ε
                    (f(m) - a).abs < ε
                }
            }
            tail_bound(f, a, n, ε)
        }
    }
    converge_to(f, a)
}

