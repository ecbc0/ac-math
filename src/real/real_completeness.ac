    }
}

define elem_in_real_seq_image_to_set(f: ℕ -> ℝ, x: ℝ) -> Bool {
    exists(n: ℕ) { x = f(n) }
}

define seq_image(f: ℕ -> ℝ) -> Set[ℝ] {
    Set.new(elem_in_real_seq_image_to_set(f))
}

theorem seq_upper_bound_to_upper_bound(f: ℕ -> ℝ) {
    have_seq_upper_bound(f) implies have_upper_bound(seq_image(f))
} by {
    let a: ℝ satisfy { 
        a.is_seq_upper_bound(f) 
    }
    forall(x: ℝ) {
        if x ∈ seq_image(f) {
            let n: ℕ satisfy { x = f(n) }
            f(n) <= a
            x <= a
        }
    }
    a.is_set_upper_bound(seq_image(f))
    have_upper_bound(seq_image(f))
}

theorem seq_lower_bound_to_lower_bound(f: ℕ -> ℝ) {
    have_seq_lower_bound(f) implies have_lower_bound(seq_image(f))
} by {
    let a: ℝ satisfy { 
        a.is_seq_lower_bound(f) 
    }
    forall(x: ℝ) {
        if x ∈ seq_image(f) {
            let n: ℕ satisfy { x = f(n) }
            f(n) >= a
            x >= a
        }
    }
    a.is_set_lower_bound(seq_image(f))
    have_lower_bound(seq_image(f))
}

theorem seq_nonempty(f: ℕ -> ℝ) {
    (seq_image(f)).is_nonempty
} by {
    f(ℕ.0) ∈ seq_image(f)
}

theorem bounded_increase_convergence_to(f: ℕ -> ℝ) {
    is_increase(f) and have_seq_upper_bound(f) implies converge_to(f, sup(seq_image(f)))
} by {
    (seq_image(f)).is_nonempty
    have_upper_bound(seq_image(f))
    let a = sup(seq_image(f))
    a.is_set_least_upper_bound(seq_image(f))
    forall(ε: ℝ) {
        if ε > 0 {
            let x: ℝ satisfy {
                x ∈ seq_image(f) and a - ε < x and x <= a
            }
            let n: ℕ satisfy { x = f(n) }
            forall(m: ℕ) {
                if m > n {
                    f(m) >= f(n)
                    a - ε < f(m)
                    a.is_set_upper_bound(seq_image(f))
                    f(m) ∈ seq_image(f)
                    f(m) <= a 
                    - ε < f(m) - a
                    f(m) - a <= 0
                    f(m) - a < ε
                    (f(m) - a).abs < ε
                }
            }
        }
    }
    converge_to(f, a)
}

theorem bounded_increase_convergence(f: ℕ -> ℝ) {
    is_increase(f) and have_seq_upper_bound(f) implies converge(f)
}

theorem bounded_decrease_convergence_to(f: ℕ -> ℝ) {
    is_decrease(f) and have_seq_lower_bound(f) implies converge_to(f, inf(seq_image(f)))
} by {
    (seq_image(f)).is_nonempty
    have_lower_bound(seq_image(f))
    let a = inf(seq_image(f))
    a.is_set_greatest_lower_bound(seq_image(f))
    forall(ε: ℝ) {
        if ε > 0 {
            let x: ℝ satisfy {
                x ∈ seq_image(f) and a <= x and x < a + ε
            }
            let n: ℕ satisfy { x = f(n) }
            forall(m: ℕ) {
                if m > n {
                    f(m) <= f(n)
                    f(m) < a + ε
                    a.is_set_lower_bound(seq_image(f))
                    f(m) ∈ seq_image(f)
                    a <= f(m)
                    f(m) - a < ε
                    0 <= f(m) - a
                    (f(m) - a).abs < ε
                }
            }
        }
    }
    converge_to(f, a)
}

theorem bounded_decrease_convergence(f: ℕ -> ℝ) {
    is_decrease(f) and have_seq_lower_bound(f) implies converge(f)
}

